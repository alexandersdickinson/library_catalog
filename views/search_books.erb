<form action='<%= @action%>'>
	<div class='form-group'>
		<label for='title'>Title</label>
		<input id='title' name='title' class='form-control' type='text'>
	</div>
	
	<div class='form-group'>
		<label for='last-name'>Author Last Name</label>
		<input id='last-name' name='last-name' class='form-control' type='text'>
	</div>
	
	<div class='form-group'>
		<label for='first-name'>Author First Name</label>
		<input id='first-name' name='first-name' class='form-control' type='text'>
	</div>
	
	<button class='btn btn-primary' type='submit'>Search Books</button>
</form>